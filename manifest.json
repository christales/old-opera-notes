{
	"name": "Simple Notes",
	"manifest_version": 2,
	"description": "Simple notes in a panel, with a context menu item to copy text to a note.",
	"version": "1.1.4.1",
	"background": {"scripts": ["background.js"]},	
 	"minimum_chrome_version": "29",
		"sidebar_action": {
		"default_icon": "icon_19.png",
		"default_title": "Notes",
      "default_panel": "old-opera-notes.html"
	},
	"permissions": [
		"contextMenus"
	]
}
